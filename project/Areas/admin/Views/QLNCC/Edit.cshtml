@model project.Models.Supplier

@{
    ViewBag.Title = "Sửa Nhà Cung Cấp";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <div class="card p-4">
        <div class="card-header bg-danger text-white text-center">
            <h2>Sửa Nhà Cung Cấp</h2>
        </div>
        @using (Html.BeginForm("Edit", "QLNCC", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.Mancc)

            <div class="form-group">
                <label for="Tenncc">Tên nhà cung cấp</label>
                @Html.TextBoxFor(m => m.Tenncc, new { @class = "form-control", placeholder = "Nhập tên nhà cung cấp" })
                @Html.ValidationMessageFor(m => m.Tenncc, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Diachi">Địa chỉ</label>
                @Html.TextBoxFor(m => m.Diachi, new { @class = "form-control", placeholder = "Nhập địa chỉ" })
                @Html.ValidationMessageFor(m => m.Diachi, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label for="Sdt">Số điện thoại</label>
                @Html.TextBoxFor(m => m.Sdt, new { @class = "form-control", placeholder = "Nhập số điện thoại" })
                @Html.ValidationMessageFor(m => m.Sdt, "", new { @class = "text-danger" })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success me-2">Lưu</button>
                <a href="@Url.Action("Index", "QLNCC")" class="btn btn-secondary">Hủy</a>
            </div>
        }
    </div>
</div>

<style>

    .card {
        border-radius: 10px;
        border: 1px solid #ddd;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 1.5rem;
        text-align: center;
        background-color: #007bff;
        color: white;
        border-bottom: 1px solid #ddd;
        padding: 15px;
    }

    .form-group label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .form-group input {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }
</style>
