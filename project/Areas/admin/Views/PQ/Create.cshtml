@model project.Models.PhanQuyen

@{
    ViewBag.Title = "Thêm quyền";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";

}

<h2></h2>

@using (Html.BeginForm("Create", "PQ", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-danger text-white">
                <h2 class="text-center mb-0">Thêm quyền</h2>
            </div>

            <div class="card-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div class="form-group mb-3">
                    @Html.LabelFor(m => m.mota, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.mota, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.mota, "", new { @class = "text-danger" })
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success me-2">Lưu</button>
                    <a href="@Url.Action("Index", "PQ")" class="btn btn-secondary ms-2">Hủy</a>
                </div>

            </div>
        </div>
    </div>
}

<style>

    .card {
        border-radius: 10px;
        border: 1px solid #ddd;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 1.5rem;
        text-align: center;
        background-color: #007bff;
        color: white;
        border-bottom: 1px solid #ddd;
        padding: 15px;
    }

    .form-group label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .form-group input {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }
</style>