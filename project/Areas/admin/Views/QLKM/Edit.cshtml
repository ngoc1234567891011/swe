@model project.Models.Promotion

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <div class="card p-4">
        <div class="card-header bg-danger text-white text-center">
            <h2>Sửa Khuyến Mãi</h2>
        </div>

        @using (Html.BeginForm("Edit", "QLKM", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.makm)

            <div class="form-group">
                <label for="ten_khuyen_mai">Tên Khuyến Mãi</label>
                @Html.TextBoxFor(m => m.ten_khuyen_mai, new { @class = "form-control" })
            </div>
            <!-- Dropdown for Mã Sản Phẩm -->
            <div class="form-group">
                <label for="masp">Mã Sản Phẩm</label>
                @Html.DropDownListFor(m => m.masp, (SelectList)ViewBag.ProductList, "Chọn Sản Phẩm", new { @class = "form-select" })
            </div>
            <div class="form-group">
                <label for="dieu_kien">Điều Kiện</label>
                @Html.TextBoxFor(m => m.dieu_kien, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="thoi_gianbd">Thời Gian Bắt Đầu</label>
                @Html.TextBoxFor(m => m.thoi_gianbd, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="form-group">
                <label for="thoi_giankt">Thời Gian Kết Thúc</label>
                @Html.TextBoxFor(m => m.thoi_giankt, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
            </div>
            <div class="form-group mb-3">
                <label for="trang_thai">Trạng Thái</label>
                @Html.TextBoxFor(m => m.trang_thai, new { @class = "form-control" })
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success me-2">Lưu</button>
                <a href="@Url.Action("Index", "QLDM")" class="btn btn-secondary ms-2">Hủy</a>
            </div>
        }
    </div>
</div>
<style>

    .card {
        border-radius: 10px;
        border: 1px solid #ddd;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        font-size: 1.5rem;
        text-align: center;
        background-color: #007bff;
        color: white;
        border-bottom: 1px solid #ddd;
        padding: 15px;
    }

    .form-group label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .form-group input {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        width: 100%;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: white;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
        color: white;
    }
</style>