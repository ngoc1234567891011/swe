@model project.Models.Ykr
@{
    ViewBag.Title = "contact";
}
@using project.Models
@{
    getUser userHelper = new getUser();
}

<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <br />
            <div class="pagetitle">
                <nav>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="~/Home"><i class="bi bi-house-door"></i></a></li>
                        <li class="breadcrumb-item active">Liên hệ</li>
                    </ol>
                </nav>
            </div>
            <h2></h2>
            <p> <span>liên hệ</span></p>
        </div>

        <div class="mb-3">
            <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d31353.617385809444!2d106.60678921083982!3d10.795822100000008!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317529b714714eeb%3A0x510a727be90538c2!2sSWE%20%2F%20G-Town%202!5e0!3m2!1svi!2s!4v1689866367572!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>            <div class="sent-message" style="display:none">Cảm ơn bạn đã đóng góp! Chúng tôi sẽ phản hồi ở email bạn sau.</div>
        </div><!-- End Google Maps -->
        
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#btnSubmit").click(function () {
            var chu_de = $("#chu_de").val();
            var noi_dung = $("#noi_dung").val();

            // Kiểm tra xem các trường đã được nhập hay chưa
            if (!chu_de || !noi_dung) {
                alert("Vui lòng điền đầy đủ thông tin vào các trường!");
                return;
            }

            // Gửi form nếu tất cả các trường đã được nhập
            var formData = $("#myForm").serialize();

            $.ajax({
                type: "POST",
                url: "/lienhe/contact",
                data: formData,
                success: function (data) {
                    $(".sent-message").show(); // Hiển thị thông báo khi gửi thành công
                },
                error: function (xhr, status, error) {
                    console.log(error); // Log lỗi nếu gửi không thành công
                }
            });
        });
    });
</script>
